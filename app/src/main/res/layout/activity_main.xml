<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:graph="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/depth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 수심: -- m"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/custom_black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dive_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다이브 시간: 0초"
            android:textSize="16sp"
            android:textColor="@color/custom_black"
            android:layout_marginBottom="12dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/depth_graph"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp" />

        <!-- ✅ 통합된 버튼 하나 -->
        <Button
            android:id="@+id/button_toggle_dive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작" />

    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>
